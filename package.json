{
  "name": "",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "db:reset": "prisma migrate reset --force",
    "db:reset:schema": "DATABASE_DIRECT_URL=\"${DATABASE_DIRECT_URL}?schema=${SCHEMA_NAME}\" pnpm run db:reset",
    "//": "プレビューごとにスキーマを作成。スキーマ名は、英数字と _ のみ使用可能なためそれ以外は _ に変換する。 name/foo -> name_foo",
    "db:reset:preview": "SCHEMA_NAME=$(echo ${VERCEL_GIT_REPO_SLUG}_preview_${VERCEL_GIT_COMMIT_REF} | sed -e 's/[^[:alnum:]]/_/g') pnpm run db:reset:schema",
    "db:deploy": "prisma migrate deploy",
    "db:deploy:schema": "DATABASE_DIRECT_URL=\"${DATABASE_DIRECT_URL}?schema=${SCHEMA_NAME}\" pnpm run db:deploy",
    "db:deploy:production": "SCHEMA_NAME=${VERCEL_GIT_REPO_SLUG}_production pnpm run db:deploy:schema",
    "prebuild:preview": "pnpm run db:reset:preview",
    "prebuild:production": "pnpm run db:deploy:production",
    "build": "remix build",
    "dev": "remix dev --manual",
    "lint:check": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:write": "eslint --fix --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "remix-serve ./build/index.js",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@prisma/client": "5.10.2",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@remix-run/css-bundle": "^2.8.0",
    "@remix-run/node": "^2.8.0",
    "@remix-run/react": "^2.8.0",
    "@remix-run/serve": "^2.8.0",
    "@types/qrcode": "^1.5.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "isbot": "^4.1.0",
    "prisma": "^5.10.2",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.50.1",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.8.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
